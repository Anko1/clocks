<body>

{{> header}}

<section class="banner">
    <div class="info-wrap">
        <h1>
            FIND THE PERFECT GIFT<br>
            FOR HIM OR HER
        </h1>

        <button class="shop-now">shop now</button>
    </div>
</section>

<section id="clocks" class="container">
    <h4 class="header">Header</h4>

    <div class="multiple-items">
        {{#each clocks}}
            <div class="clock">
                <a href="/clock-view/{{@index}}">
                    <img src="{{this.images.[0]}}" class="clock-icon">
                </a>

                <div class="clock-info">
                    <span class="clock-title">
                        {{this.name}}
                    </span>
                    <div class="clock-prices">
                        <!--<span class="sale">196$</span>-->
                        <!--<span class="new-price">150$</span>-->
                        <span>{{this.price}} $</span>

                        <button class="clock-buy btn-floating waves-effect waves-gray right" data-clock-id="{{@index}}">
                            <i  class="material-icons small">add_shopping_cart</i>
                        </button>
                    </div>
                </div>
            </div>
        {{/each}}

