        <!--<p>Here is some more information about this product that is only revealed once clicked on.</p>-->
        <!--</div>-->
        <!--</div>-->
    </div>

    <div class="controls">
        <span id="prev-clock" class="arrow prev">
            <i class="material-icons right">keyboard_arrow_left</i>
        </span>

        <span id="next-clock" class="arrow next">
            <i class="material-icons right">keyboard_arrow_right</i>
        </span>
    </div>
</section>

<section id="features">
    <h4 class="header">Our Features</h4>

    <div class="container">
        <div class="row">
            <div class="col l4">
                <div class="feature">
                    <!--<i class="large material-icons">airplanemode_active</i>-->
                    <img src="/images/plane_icon.png" alt="">
                    <span class="title">FREE SHIPPING</span>
                </div>
            </div>
            <div class="col l4">
                <div class="feature">
                    <!--<i class="large material-icons">card_travel</i>-->
